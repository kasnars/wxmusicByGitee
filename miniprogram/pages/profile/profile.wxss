.img{
  overflow: hidden;
  border-radius: 50%;
  margin-bottom: 40rpx;
}
.nav{
  background: #ffff;
  width: 90%;
  margin: 0 auto;
}
.nav-item{
  box-sizing: border-box;
  padding: 10rpx 30rpx;
  border-radius: 30px;
  overflow: hidden;
  position: relative;
  height: 75rpx;
}
.nav-item .iconfont{
  padding-right: 40rpx;
}
.nav-item .icon-xiangyou{
  position: absolute;
  right: 0;
  top: 50%;
  transform: translate(0,-50%);
}