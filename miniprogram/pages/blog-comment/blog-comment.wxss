.fixed{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 90rpx;
  line-height: 80rpx;
  padding-bottom: 30rpx;
  background-color: #f1f1f1;
}
.bar{
  margin: 10rpx 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-style: italic;
  font-weight: bold;
}
.user{
  background-color: #fff;
  margin: 10rpx 20rpx;
  border-radius: 20px;
  box-sizing: border-box;
}
.usercom{
  display: flex;
  align-items: center;
}
.userimg{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  align-items: center;
  margin:0 20rpx;
}
.userinf{
  flex: 1;
  align-items: center;
  width: 100%;
  flex-wrap: wrap;
}
.username{
  font-size: 25rpx;
}
.usertime{
  font-size: 25rpx;
}
.usertext{
  margin: 10rpx 20rpx;
  font-size: 35rpx;
}