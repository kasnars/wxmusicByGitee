.container{
  padding: 20rpx;
}
.content{
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
}
.footer{
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  background: #f1f1f1;
}
.wordnum{
  flex: 4;
  text-align: right;
  color: #474747;
  font-size: 32rpx;
  padding-right: 30rpx;
}
.fbbtn{
  flex: 1;
  background: #d43c43;
  color: #fff;
  font-size: 24rpx;
  margin-right: 20rpx;
}
.image-list{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.image-warp{
  justify-content: start;
  width: 220rpx;
  height: 220rpx;
  margin: 0 10rpx 10rpx 0;
  position: relative;
  overflow: hidden;
  text-align: center;
  line-height: 220rpx;
  border: 1px solid #474747;
}
.image-warp .icon-shanchu{
  position: absolute;
  top: 0;
  right: 0;
  background: #000000;
  opacity: 0.4;
  color: #fff;
  font-size: 38rpx;
}