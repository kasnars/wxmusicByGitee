.item{
  width: 100%;
  height: 100rpx;
  padding: 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}
.itemindex{
  font-size: 40rpx;
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.musicinfo{
  flex-grow: 1;
  width: 0;
}
.line{
  white-space:nowrap; 
  overflow: hidden;
  text-overflow: ellipsis;
}
.name{
  color: #333;
  font-size: 32rpx;
}
.orthername{
  margin-left: 40rpx;
  color: #888;
  font-size: 32rpx;
  white-space:nowrap; 
  overflow: hidden;
  text-overflow: ellipsis;
}
.singer{
  margin-top: 10rpx;
  color:#888 ;
  font-size: 24rpx;
  white-space:nowrap; 
  overflow: hidden;
  text-overflow: ellipsis;
}
.playing .itemindex, .playing .musicinfo .name, .playing .musicinfo .orthername, .playing .musicinfo .singer {
  color: #d43c33;
}